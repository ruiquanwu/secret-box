.container.album-photos-index
  .row.album-page-header.text-left
    %h1
      = @album.name
      = link_to @album, class: 'btn btn-success' do
        %i.glyphicon.glyphicon-info-sign
        %span
          Album Summary
      = link_to album_photos_path + "?page=#{@photos.current_page}", class: "btn btn-success", method: :post, remote: true do
        %i.glyphicon.glyphicon-plus
        %span Append Page
    %p
      current page: #{@photos.current_page}
      = button_tag class: 'btn btn-success', id: 'update_photos' do
        %i.glyphicon.glyphicon-floppy-saved
        %span
          Save Album
  .album_photos_page_body#album_photos_page_body
    = render 'album_page_body', :photos => @photos, :album => @album

  .row.right-panel.panel.panel-info
    = link_to "#", class: "btn btn-info photo-box-top-btn" do
      Photo-Box
      %span.badge#badge-top
        = @pictures.count
    .panel-body.photo-box-content
      - @pictures.each do |picture|
        - if @album.sample_album.orientation == "landscape"
          = image_tag(picture.context.url, class: "img-responsive draggable-photo thumbnail", id: "picture_id_" + picture.id.to_s,"data-picture": picture.id)
        - else
          = image_tag(picture.context.portrait.url, class: "img-responsive draggable-photo thumbnail", id: "picture_id_" + picture.id.to_s,"data-picture": picture.id)

  #page_links.text-center
    = paginate @photos
.photo-box
  = link_to "#", class: "btn btn-info photo-box-btn" do
    Photo-Box
    %span.badge#badge-bottom
      = @pictures.count
    
