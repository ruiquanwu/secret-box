%h1
  = @album.name
%p Insert Photo
= form_for [@album, @photo], :url => {:action => "insert_create"} do |f|
  .row.photo-page
    .col-md-2.memo
      = f.label :memo, "Memo:"
      = f.text_area :memo, size: "15x22"
    .col-md-10.picture
      %img.img-responsive{:src => "http://placehold.it/900x600"}/
  .form-group
    = f.label :picture
    = f.file_field :picture
    = f.hidden_field :picture_cache
  .form-group
    = f.submit "Insert", class: 'btn btn-success'
