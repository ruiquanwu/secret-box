      <%= form_for [@album, @order] do |f| %>
      <div class="order-options">
        <h4> Select Order Options: </h4>
        <ul>
          <div class="checkbox">
            <%= check_box("order", "options", {:multiple => true, id: "option-hand-writing-memo"}, "hand-writing-memo", "") %>Hand-writing Memo
          </div>
          <div class="checkbox">
            <%= check_box("order", "options", {:multiple => true, id: "option-gift"}, "gift", "") %>This is Gift
          </div>
          <div class="checkbox">
            <%= check_box("order", "options", {:multiple => true, id: "option-urgent", data:{price: @urgent_option.price}}, "urgent-order-option", "") %>Urgent Order
          </div>
        </ul>
      </div>
      
      <div class="order-shippment">
        <h4>Select Order Shipment:</h4>
        <ul>
          <div class="radio"><%= radio_button("order", "shippment", @standard_shipment.name, {checked: "checked", id: "standard-shipment-radio", data: {name: @standard_shipment.name, price: @standard_shipment.price}}) %>Standard -- $<%= @standard_shipment.price %></div>
          <div class="radio"><%= radio_button("order", "shippment", @express_shipment.name, {id: "express-shipment-radio", data: {name: @express_shipment.name, price: @express_shipment.price}}) %>Express -- $<%= @express_shipment.price %></div>
          <div class="radio"><%= radio_button("order", "shippment", @nextday_shipment.name, {id: "nextday-shipment-radio", data: {name: @nextday_shipment.name, price: @nextday_shipment.price}}) %>Nextday -- $<%= @nextday_shipment.price %></div>
        </ul>
      </div>
      
      
      <div class="order-btns text-right">
        <%= f.submit "Checkout", class:"btn btn-success" %>
        <%= link_to "Cancel", @album, class:"btn btn-danger" %>
      </div>
      
      <% end %>