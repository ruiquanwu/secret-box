.view_photo.droppable-photo{ album.sample_album.has_memo == "Yes" ? {class: "col-md-10"} : {class: "col-md-12"}}
  - if photo.picture
    - if album.sample_album.orientation == "landscape"
      = image_tag(photo.picture.context.url, class: "img-responsive thumbnail")
    - else
      = image_tag(photo.picture.context.portrait.url, class: "img-responsive thumbnail")