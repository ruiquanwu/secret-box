<div class="container">
  <h1> Manager Order Edit </h1>
  <div class="col-md-12">
    <div class="col-md-4">
      <%= image_tag(@order.album.avatar, class: "img-responsive")%>
    </div>
    
    <div class="col-md-6">
      <h3>Order Details:</h3>
      <p> Album Sample: <%= @order.album.sample_album.name %></p>
      <p> Photos Size:"<%= @order.album.photo_size%>"</p>  
      <p> Photos Count: <%= @order.album.photos_inserted.count%></p>
      <div> Order Options: 
      <ul>
        <% if @order.options %>
        <% @order.options.each do |option| %>
        <li><%= option %></li>
        <% end %>
        <% end %>
      </ul>
      </div>
    <p> Shipment: <%= @order.shippment %></p>
  </div>
    
    <div class="col-md-2">
      
    </div>
  </div>
</div>