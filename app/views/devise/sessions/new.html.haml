  window.fbAsyncInit = function() {
    FB.init({
      appId      : '961949130591364',
      xfbml      : true,
      version    : 'v2.7'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
